{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/todo-microservices-kafka/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/todo-microservices-kafka/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/todo-microservices-kafka",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json"
      }
    },
    "person-service": {
      "type": "application",
      "root": "apps/person-service",
      "entryFile": "main",
      "sourceRoot": "apps/person-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/person-service/tsconfig.app.json"
      }
    },
    "todo-service": {
      "type": "application",
      "root": "apps/todo-service",
      "entryFile": "main",
      "sourceRoot": "apps/todo-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/todo-service/tsconfig.app.json"
      }
    }
  }
}